        <Grid Column="1">
            <StackPanel Orientation="Vertical"
                        Margin="5">
                <ComboBox
                    x:Name="ThemeSelectorCB"
                    SelectedValuePath="Content"
                    SelectedValue="{Binding CurrentTheme, Source={x:Static AutomationProperties:Settings.Default}, Mode=OneWay}">
                    <ComboBox.Items>
                        <ComboBoxItem
                            Content="Default"/>
                        <ComboBoxItem
                            Content="Flat"/>
                        <ComboBoxItem
